<h2><br>Respond<br></h2>



<div id="projects">
<table>

<% @posts.each do |post| %>
  
  <div class= "block">
    <div class="title"><%= post.title %></div>
    <div class="content"><%= post.Text %></div>
    <div class="media"><%= post.media %></div>
    <% if post.block? %>
    <%= image_tag post.block_url.to_s %>
    <% end %>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
<br />
<div> 

</div>
<%= link_to 'New Post', new_post_path %>

<%= form_for @post, :html => {:multipart => true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Text %><br />
    <%= f.text_area :Text %>
  </div>
  <div class="field">
    <%= f.label :media %><br />
    <%= f.text_field :media %>
  </div>
  <div class="field">
    <%= f.label :block %>
    <%= f.file_field :block %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>





